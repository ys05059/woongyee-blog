# Notion 설정 (필수)
NOTION_API_KEY=your_notion_integration_secret
NOTION_DATABASE_ID=your_database_id

# 블로그 기본 정보
NEXT_PUBLIC_BLOG_NAME=My Awesome Blog
NEXT_PUBLIC_BLOG_DESCRIPTION=A blog powered by Notion
NEXT_PUBLIC_BLOG_URL=https://yourdomain.com
NEXT_PUBLIC_AUTHOR_NAME=Your Name
NEXT_PUBLIC_AUTHOR_EMAIL=you@example.com

# 소셜 미디어 (선택)
NEXT_PUBLIC_GITHUB_URL=
NEXT_PUBLIC_TWITTER_URL=
NEXT_PUBLIC_LINKEDIN_URL=

# 기능 설정
NEXT_PUBLIC_POSTS_PER_PAGE=10
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Google Analytics (선택)
NEXT_PUBLIC_GA_ID=

# Giscus 댓글 시스템 (선택)
# https://giscus.app/ 에서 설정값 확인
NEXT_PUBLIC_GISCUS_REPO=
NEXT_PUBLIC_GISCUS_REPO_ID=
NEXT_PUBLIC_GISCUS_CATEGORY=
NEXT_PUBLIC_GISCUS_CATEGORY_ID=

# Revalidation 설정 (선택)
# On-demand revalidation을 위한 비밀 토큰
# 랜덤 문자열 사용 (예: openssl rand -base64 32)
REVALIDATE_TOKEN=
